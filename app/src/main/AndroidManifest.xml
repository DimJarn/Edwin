        <activity
            android:name=".QuizzActivity"
            android:screenOrientation="portrait"
            android:theme="@style/QuizTheme"></activity>
        <activity
            android:name=".FicheActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"></activity>
        <activity
            android:name=".FirstLaunch.TutorialActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".VosFichesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
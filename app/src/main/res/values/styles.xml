<resources>

    <!-- Permet de modifier le thÃ¨me global de l'app -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Permet de modifier le theme de la page d'accueil -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>


    <!-- Permet de modifier l'aspect de la page de lancement -->
    <style name="themeTest.Launcher" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/loading_screen</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>

    <!-- Permet de modifier l'aspect de la carte de texte dans l'accueil -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Permet d'augmenter la taille des item du menu -->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:listDivider">@color/DarkGrey</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/DarkGrey</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="toolbarDesign">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:listDivider">@color/DarkGrey</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/DarkGrey</item>
    </style>


    <!--Toolbar design -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarPopUp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/DarkGrey</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bglayerwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nom_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Pneumothorax"
            android:textColor="@color/primaryColor"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nom_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Service de chrirurgie thoracique"
            android:textColor="@color/primaryColor"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/description_ope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="L’intervention qui vous est proposée s’appelle la symphyse pleurale "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="italic" />

        <ExpandableListView
            android:id="@+id/expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ExpandableListView>

    </LinearLayout>

</RelativeLayout>